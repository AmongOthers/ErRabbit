<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns:util="http://www.springframework.org/schema/util"
             xmlns:context="http://www.springframework.org/schema/context"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-4.0.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <util:properties id="rabbituser" location="classpath:user.properties"/>
    <context:property-placeholder properties-ref="rabbituser"/>

    <http auto-config="true" use-expressions="true">
        <intercept-url pattern="/login.err" access="permitAll" />
        <intercept-url pattern="/**" access="hasRole('ROLE_USER')" />
        <form-login
                login-page="/login.err"
                default-target-url="/rabbit/list.err"
                authentication-failure-url="/login.err?error"
                login-processing-url="/login_process.err"
                username-parameter="username"
                password-parameter="password" />
        <logout logout-success-url="/login.err?logout"  />
        <csrf/>
    </http>

    <authentication-manager>
        <authentication-provider>
            <user-service>
                <user name="#{rabbituser['username']}" password="#{rabbituser['password']}" authorities="ROLE_USER" />
            </user-service>
        </authentication-provider>
    </authentication-manager>

</beans:beans>